doctype html
html.no-js(
page-props= JSON.stringify(props)
redux-state= reduxState
)
    head
        title=title
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        if manifest['/main.css']
            link(rel="preload" href=manifest['/main.css'] as="style")
        link(rel="preload" href=manifest['/vendor.js'] as="script")
        link(rel="preload" href=manifest['/main.js'] as="script")
        if manifest['/main.css']
            link(rel="stylesheet" type="text/css" href=manifest['/main.css'])
        script(type='text/javascript')!=modernizrScript
    body
        #content!= content
    script(type='text/javascript' src=manifest['/vendor.js'])
    script(type='text/javascript' src=manifest['/main.js'])
